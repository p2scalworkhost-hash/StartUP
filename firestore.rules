rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isCompanyMember(companyId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/companies/$(companyId)) &&
        (
          get(/databases/$(database)/documents/companies/$(companyId)).data.owner_uid == request.auth.uid ||
          request.auth.uid in get(/databases/$(database)/documents/companies/$(companyId)).data.member_uids
        );
    }
    
    function isAdmin() {
      return isAuthenticated() &&
        request.auth.token.role == 'admin';
    }
    
    // Companies: owner + members only
    match /companies/{companyId} {
      allow read: if isCompanyMember(companyId);
      allow create: if isAuthenticated() &&
        request.resource.data.owner_uid == request.auth.uid;
      allow update: if isCompanyMember(companyId);
      allow delete: if isAdmin();
    }
    
    // Assessments: company members only
    match /assessments/{assessmentId} {
      allow read: if isCompanyMember(resource.data.company_id);
      allow create: if isAuthenticated() &&
        isCompanyMember(request.resource.data.company_id);
      allow update: if isCompanyMember(resource.data.company_id);
    }
    
    // Laws & Obligations: public read, admin write
    match /laws/{lawId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /obligations/{obligationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
